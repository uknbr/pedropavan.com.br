<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>${about_name}</title>
    <link href="bootstrap.min.css" rel="stylesheet">
    <link href="font-awesome.css" rel="stylesheet">
    <link href="main.css" rel="stylesheet">
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div id="photo-header" class="text-center">
            <!-- PHOTO (AVATAR) -->
            <div id="photo">
              <img src="${about_photo}" alt="My photo">
            </div>
            <div id="text-header">
              <h1>Hello,<br> my name is <span>${about_name}</span><sup>${about_age}yo</sup> and this is my page</h1>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-7">
          <!-- ABOUT ME -->
          <div class="box">
            <h2>About Me</h2>
            <p>${about_description}</p>
          </div>
          <!-- EDUCATION -->
          <div class="box">
            <h2>Education</h2>
            <ul id="education" class="clearfix">
              <li>
                <div class="year pull-left">${education_1_year}</div>
                <div class="description pull-right">
                  <h3>${education_1_title}</h3>
                  <p>${education_1_description}</p>
                </div>
              </li>
              <li>
                <div class="year pull-left">${education_2_year}</div>
                <div class="description pull-right">
                  <h3>${education_2_title}</h3>
                  <p>${education_2_description}</p>
                </div>
              </li>
              <li>
                <div class="year pull-left">${education_3_year}</div>
                <div class="description pull-right">
                  <h3>${education_3_title}</h3>
                  <p>${education_3_description}</p>
                </div>
              </li>
              <li>
                <div class="year pull-left">${education_4_year}</div>
                <div class="description pull-right">
                  <h3>${education_4_title}</h3>
                  <p>${education_4_description}</p>
                </div>
              </li>
              <li>
                <div class="year pull-left">${education_5_year}</div>
                <div class="description pull-right">
                  <h3>${education_5_title}</h3>
                  <p>${education_5_description}</p>
                </div>
              </li>
              <li>
                <div class="year pull-left">${education_6_year}</div>
                <div class="description pull-right">
                  <h3>${education_6_title}</h3>
                  <p>${education_6_description}</p>
                </div>
              </li>              
            </ul>
          </div>
          <!-- EXPERIENCES -->
          <div class="box">
            <h2>Experiences</h2>
            <div class="job clearfix">
              <div class="col-xs-3">
                <div class="where">${experience_1_where}</div>
                <div class="year">${experience_1_year}</div>
              </div>
              <div class="col-xs-9">
                <div class="profession">${experience_1_profession}</div>
                <div class="description">${experience_1_description}</div>
              </div>
            </div>
            <div class="job clearfix">
              <div class="col-xs-3">
                <div class="where">${experience_2_where}</div>
                <div class="year">${experience_2_year}</div>
              </div>
              <div class="col-xs-9">
                <div class="profession">${experience_2_profession}</div>
                <div class="description">${experience_2_description}</div>
              </div>
            </div>
            <div class="job clearfix">
              <div class="col-xs-3">
                <div class="where">${experience_3_where}</div>
                <div class="year">${experience_3_year}</div>
              </div>
              <div class="col-xs-9">
                <div class="profession">${experience_3_profession}</div>
                <div class="description">${experience_3_description}</div>
              </div>
            </div>
            <div class="job clearfix">
              <div class="col-xs-3">
                <div class="where">${experience_4_where}</div>
                <div class="year">${experience_4_year}</div>
              </div>
              <div class="col-xs-9">
                <div class="profession">${experience_4_profession}</div>
                <div class="description">${experience_4_description}</div>
              </div>
            </div>
            <div class="job clearfix">
              <div class="col-xs-3">
                <div class="where">${experience_5_where}</div>
                <div class="year">${experience_5_year}</div>
              </div>
              <div class="col-xs-9">
                <div class="profession">${experience_5_profession}</div>
                <div class="description">${experience_5_description}</div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-5">
          <!-- CONTACT -->
          <div class="box clearfix">
            <h2>Contact</h2>
            <div class="contact-item">
              <div class="icon pull-left text-center"><span class="fa ${contact_1_icon} fa-fw"></span></div>
              <div class="title only pull-right"><a href="${contact_1_title}:${contact_1_value}">${contact_1_value}</a></div>
            </div>
            <div class="contact-item">
              <div class="icon pull-left text-center"><span class="fa ${contact_2_icon} fa-fw"></span></div>
              <div class="title only pull-right"><a href="${contact_2_title}:${contact_2_value}">${contact_2_value}</a></div>
            </div>            
            <div class="contact-item">
              <div class="icon pull-left text-center"><span class="fa ${contact_3_icon} fa-fw"></span></div>
              <div class="title pull-right">${contact_3_title}</div>
              <div class="description pull-right"><a href="${contact_3_value}" target="_blank">${contact_3_value}</a></div>
            </div>
            <div class="contact-item">
              <div class="icon pull-left text-center"><span class="fa ${contact_4_icon} fa-fw"></span></div>
              <div class="title pull-right">${contact_4_title}</div>
              <div class="description pull-right"><a href="${contact_4_value}" target="_blank">${contact_4_value}
            </div>
          </div>
          <!-- SKILLS -->
          <div class="box">
            <h2>Skills</h2>
            <div class="skills">
              <div class="item-skills" data-percent="${skill_1_percent}">${skill_1_title}</div>
              <div class="item-skills" data-percent="${skill_2_percent}">${skill_2_title}</div>
              <div class="item-skills" data-percent="${skill_3_percent}">${skill_3_title}</div>
              <div class="item-skills" data-percent="${skill_4_percent}">${skill_4_title}</div>
              <div class="item-skills" data-percent="${skill_5_percent}">${skill_5_title}</div>
              <div class="item-skills" data-percent="${skill_6_percent}">${skill_6_title}</div>
              <div class="item-skills" data-percent="${skill_7_percent}">${skill_7_title}</div>
              <div class="item-skills" data-percent="${skill_8_percent}">${skill_8_title}</div>
              <div class="item-skills" data-percent="${skill_9_percent}">${skill_9_title}</div>
              <div class="item-skills" data-percent="${skill_10_percent}">${skill_10_title}</div>
              <div class="item-skills" data-percent="${skill_11_percent}">${skill_11_title}</div>
              <div class="skills-legend clearfix">
                <div class="legend-left legend">Beginner</div>
                <div class="legend-left legend"><span>Proficient</span></div>
                <div class="legend-right legend"><span>Expert</span></div>
                <div class="legend-right legend">Master</div>
              </div>
            </div>
          </div>
          <!-- LANGUAGES -->
          <div class="box">
            <h2>Languages</h2>
            <div id="language-skills">
              <div class="skill">${language_1_name} <div class="icons pull-right"><div style="width: ${language_1_percent}%;" class="icons-red"></div></div></div>
              <div class="skill">${language_2_name} <div class="icons pull-right"><div style="width: ${language_2_percent}%;" class="icons-red"></div></div></div>
              <div class="skill">${language_3_name} <div class="icons pull-right"><div style="width: ${language_3_percent}%;" class="icons-red"></div></div></div>
            </div>
          </div>
          <!-- HOBBIES -->
          <div class="box">
            <h2>Hobbies</h2>
            <div class="hobby">${hobbie_1}</div>
            <div class="hobby">${hobbie_2}</div>
            <div class="hobby">${hobbie_3}</div>
            <div class="hobby">${hobbie_4}</div>
            <div class="hobby">${hobbie_5}</div>
            <div class="hobby">${hobbie_6}</div>
            <div class="hobby">${hobbie_7}</div>
            <div class="hobby">${hobbie_8}</div>
          </div>
        </div>
      </div>
    </div>
    <!-- JQUERY -->
    <script src="jquery.min.js"></script>
    <!-- BOOTSTRAP -->
    <script src="bootstrap.min.js"></script>
    <!-- SCRIPTS -->
    <script src="scripts.js"></script>
  </body>
</html>